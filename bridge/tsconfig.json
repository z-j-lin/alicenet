{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "scripts/*":["./scripts/*"]
    }
  },
  "include": [
    "./",
    "../bridge",
    "./test",
    "./scripts",
    "./contracts",
    "./typechain-types/**/*",
    "**/*.ts",
    "./decs.d.ts"
  ],
  "files": ["./hardhat.config.ts"]
}
